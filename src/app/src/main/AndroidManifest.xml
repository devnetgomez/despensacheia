<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.brzapps.janynne.despensacheia">

    <uses-sdk
        android:maxSdkVersion="23"
        android:minSdkVersion="11"
        android:targetSdkVersion="23" />

    <android:uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <android:uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <android:uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.Home"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.SettingsActivity"
            android:label="@string/title_activity_settings" />
        <activity
            android:name=".activities.NewEditItemActivity"
            android:label="@string/title_activity_new_edit_item"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.ListingItemsActivity"
            android:label="@string/title_activity_listing_items"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activities.NewEditCategoryActivity" />
        <activity
            android:name=".activities.SingleItemActivity"
            android:label="@string/title_activity_single_item"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activities.ListingCategoryActivity" />
        <activity
            android:name=".activities.Listactivity"
            android:label="@string/title_activity_listactivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activities.SingleListActivity" />
        <activity android:name=".activities.ItemsUsageActivity"></activity>
    </application>

</manifest>
